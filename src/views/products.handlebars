<h1>¡Conocé nuestra línea de productos!</h1>

<form method="get" action="/products" style="margin-top:10px;">
  <input type="hidden" name="query" value="{{query}}">
  <select name="sort" onchange="this.form.submit()">
    <option value="" {{#unless sort}}selected{{/unless}}>Sin orden</option>
    <option value="asc" {{#if (eq sort "asc")}}selected{{/if}}>Precio ↑</option>
    <option value="desc" {{#if (eq sort "desc")}}selected{{/if}}>Precio ↓</option>
  </select>
</form>

<div class="row">
  {{#each firstBlock}}
    <div class="col-3 product-card">
      <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}" class="product-img" />
      <h3>{{this.title}}</h3>
      <p>{{this.description}}</p>
      <p>${{this.price}}</p>
      <p>Stock: {{this.stock}}</p>
      <p>Categoría: {{this.category}}</p>
      <a href="/products/{{this._id}}" class="detail-btn">Ver detalle</a>
    </div>
  {{/each}}
</div>

<div class="row" style="margin-top:20px;">
  {{#each secondBlock}}
    <div class="col-3 product-card">
      <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}" class="product-img" />
      <h3>{{this.title}}</h3>
      <p>{{this.description}}</p>
      <p>${{this.price}}</p>
      <p>Stock: {{this.stock}}</p>
      <p>Categoría: {{this.category}}</p>
      <a href="/products/{{this._id}}" class="detail-btn">Ver detalle</a>
    </div>
  {{/each}}
</div>

<div class="pagination">
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}{{#if sort}}&sort={{sort}}{{/if}}{{#if query}}&query={{query}}{{/if}}" class="page-btn">← Anterior</a>
  {{/if}}
  <span>Página {{page}} de {{totalPages}}</span>
  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}{{#if sort}}&sort={{sort}}{{/if}}{{#if query}}&query={{query}}{{/if}}" class="page-btn">Siguiente →</a>
  {{/if}}
</div>