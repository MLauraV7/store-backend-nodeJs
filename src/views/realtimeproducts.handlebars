<h1>Productos</h1>

<ul id="product-list">
  {{#each products}}
   <li>
      <strong>{{this.title}}</strong> - ${{this.price}}
      <br>{{this.description}}  
      <br><em>Categoría:</em> {{this.category}} | <em>Stock:</em> {{this.stock}} | <em>ID:</em> {{this.id}}
      <button class="btn add-to-cart" data-pid="{{this._id}}">Agregar al carrito</button>
   </li>
  {{/each}}
</ul>

<hr>
<h2>Agregar productos</h2>
<form id="product-form">
  <input type="text" name="title" placeholder="Título" required>
  <input type="text" name="description" placeholder="Descripción" required>
  <input type="number" name="price" placeholder="Precio" required step="0.01">
  <input type="number" name="stock" placeholder="Stock" required>
  <input type="text" name="category" placeholder="Categoría" required>
  <button type="submit" class="btn">Agregar</button>
</form>

<hr>
<h2>Eliminar producto</h2>
<form id="delete-form">
    <input type="text" name="id" placeholder="ID del producto" required>
    <button type="submit" class="btn">Eliminar</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTime.js"></script>